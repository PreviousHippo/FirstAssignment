<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.thu2.assignment1.SelectMode">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select one Mode:"
        android:id="@+id/SelectModeText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="45dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Player"
        android:id="@+id/SinglePlayerMode"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/SelectModeText"
        android:layout_alignStart="@+id/MultiPlayerMode"
        android:layout_alignParentEnd="true"
        android:onClick="SinglePlayerMode"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multi Player"
        android:id="@+id/MultiPlayerMode"
        android:layout_below="@+id/SinglePlayerMode"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"
        android:layout_alignParentEnd="true"
        android:onClick="MultiPlayerMode"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usage and Stats"
        android:id="@+id/StatsMode"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/MultiPlayerMode"
        android:layout_alignEnd="@+id/SinglePlayerMode"
        android:onClick="StatsMode"/>
</RelativeLayout>
