<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.thu2.assignment1.MultiPlayerMode">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Multi Player Mode:"
        android:id="@+id/MultiPlayerModeText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Players"
        android:id="@+id/Two_Player_Button"
        android:textSize="40dp"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/MultiPlayerModeText"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/MultiPlayerModeText"
        android:onClick="GotoTwoPlayer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 Players"
        android:id="@+id/ThreePlayerButton"
        android:layout_below="@+id/Two_Player_Button"
        android:layout_alignParentStart="true"
        android:layout_marginTop="86dp"
        android:layout_alignParentEnd="true"
        android:textSize="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4 Players"
        android:id="@+id/FourPlayerButton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/ThreePlayerButton"
        android:layout_alignParentStart="true"
        android:textSize="40dp" />
</RelativeLayout>
